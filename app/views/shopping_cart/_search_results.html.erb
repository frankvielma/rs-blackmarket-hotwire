          <hr class="ml-4 mr-4 h-[1px] my-5 bg-black border-1 rounded">
        </div>
        <div class="mr-4 ml-2">
          <%= sprintf('%.2f', total) %>
          $
        </div>
        <div>
          <button class="rounded-lg p-3 text-white bg-black text-base">
            Go to checkout ->
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
