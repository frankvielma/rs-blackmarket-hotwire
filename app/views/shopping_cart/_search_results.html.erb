<div class="lg:hidden text-black">
  <div id="carts" class="flex flex-col gap-4 items-center">
    <div class="w-full justify-start bg-white p-4 rounded-xl text-xl">
      <div class="text-left">
        <h1>My Shopping Cart</h1>
      </div>
      <div class="pt-8">
        <% cart_items.each do |item| %>
          <%= render(CartComponent.new(product: item.product)) %>
        <% end %>
      </div>
      <div class="flex justify-between pt-8">
        <div class="">
          TOTAL
        </div>
        <div class="flex-grow">
          <hr class="ml-4 mr-4 h-[1px] my-5 bg-black border-1 rounded">
        </div>
        <div class="mr-4 ml-2">
          <%= sprintf('%.2f', total) %>
          $
        </div>
        <div>
          <button class="rounded-lg p-2 text-white bg-black text-xs">
            Go to checkout ->
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

