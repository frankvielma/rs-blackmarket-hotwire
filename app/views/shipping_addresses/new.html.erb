<div class="flexbg-slate-100 text-black">
  <%= turbo_frame_tag 'main' do %>
    <div class="flex flex-col w-max mx-auto mt-4 px-4 pb-4 bg-white text-black rounded-lg shadow-md" data-controller="shipping">
      <div class="container px-4 py-8">
        <div class="w-full px-4 bg-gray-100 rounded-lg p-4" >
          <%= render partial: 'shipping_address' %>
          <%= render partial: 'payment_information' %>
          <%= render partial: 'billing_address' %>
        </div>
      </div>
      <div class="flex flex-wrap justify-end gap-6 text-sm">
        <button data-action="click->shipping#cancel" class="px-4 py-2 bg-white text-black font-medium rounded-md border-[1px] hover:bg-black hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-400">Cancel</button>
        <button class="px-4 py-2 bg-black text-white font-medium rounded-md border-[1px] hover:bg-white hover:text-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:border-indigo-500">Buy</button>
      </div>
    </div>
  <% end %>
</div>
