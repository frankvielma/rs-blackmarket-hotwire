<div class="flexbg-slate-100 text-black mx-auto">
  <%= turbo_frame_tag 'main' do %>
    <div class="flex flex-col w-max mx-auto mt-4 px-4 pb-4 bg-white text-black rounded-lg shadow-md">
      <div class="container mx-auto px-4 py-8">
        <div class="w-full px-4 bg-gray-100 rounded-lg p-4" >
          <div class="text-left pb-8">
            <h2 class="text-sm font-bold lg:text-xl">Please add your shipping address</h2>
          </div>
          <div class="grid grid-cols-1 gap-4">
            <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
              <div>
                <label for="city" class="block text-sm font-medium text-gray-700">City*</label>
                <input type="text" id="city" placeholder="City name" class="w-full px-3 py-2 rounded-lg focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 bg-gray-100" required>
              </div>
              <div>
                <label for="country" class="block text-sm font-medium text-gray-700">Country*</label>
                <input type="text" id="country" placeholder="Country" class="w-full px-3 py-2 rounded-lg focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 bg-gray-100" required>
              </div>
              <div>
                <label for="postalcode" class="block text-sm font-medium text-gray-700">Postal code*</label>
                <input type="text" id="postalcode" placeholder="Postal Code" class="w-full px-3 py-2 rounded-lg focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 bg-gray-100" required>
              </div>
            </div>
            <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
              <div>
                <label for="address1" class="block text-sm font-medium text-gray-700">Address line 1 *</label>
                <input type="text" id="address1" placeholder="Address line 1" class="w-full px-3 py-2 rounded-lg focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 bg-gray-100" required>
              </div>
              <div>
                <label for="address2" class="block text-sm font-medium text-gray-700">Address line 2</label>
                <input type="text" id="address2" placeholder="Address line 2" class="w-full px-3 py-2 rounded-lg focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 bg-gray-100">
              </div>
            </div>
          </div>
          <div class="text-left pb-8 pt-8">
            <h2 class="text-xl font-bold mb-2">Payment Information</h2>
            <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
              <div>
                <label for="cardNumber" class="text-sm font-medium">Card number *</label>
                <input id="cardNumber" name="cardNumber" type="text"  placeholder="Card number" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:border-indigo-500">
              </div>
            </div>
            <div class="grid grid-cols-1 gap-4 text-sm font-medium pt-4 lg:grid-cols-3">
              Expiration date *
            </div>
            <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
              <div>
                <input id="expiryMonth" name="expiryMonth" type="text" placeholder="Month" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:border-indigo-500">
              </div>
              <div>
                <input id="expiryYear" name="expiryYear" type="text" placeholder="Year" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:border-indigo-500">
              </div>
            </div>
            <div class="grid grid-cols-1 lg:grid-cols-3">
              <div>
                <label for="cvc" class="text-sm font-medium">CVC code *</label>
                <input id="cvc" name="cvc" type="text" placeholder="CVC" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:border-indigo-500">
              </div>
            </div>
          </div>
          <div class="pt-4 mb-4">
            <div class="flex items-center">
              <input id="use-shipping-address" type="checkbox" name="use-shipping-address" checked class="w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 focus:ring-2" />
              <label for="use-shipping-address" class="ml-2 text-sm font-medium text-gray-700">Use my shipping address as my billing address</label>
            </div>
          </div>
        </div>
      </div>
      <div class="flex flex-wrap justify-end gap-6 text-sm">
        <button class="px-4 py-2 bg-white text-black font-medium rounded-md border-[1px] hover:bg-black hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-400">Cancel</button>
        <button class="px-4 py-2 bg-black text-white font-medium rounded-md border-[1px] hover:bg-white hover:text-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:border-indigo-500">Buy</button>
      </div>
    </div>
  <% end %>
</div>
