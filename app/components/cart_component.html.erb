<div class="lg:hidden">
  <div class="flex w-full bg-white text-black font-semibold rounded-lg border-[1px] border-gray m-2" >
    <div class="h-[120px] w-[240px] flex items-center justify-center bg-white rounded-lg">
      <% if @product.image.present? %>
        <%= image_tag @product.image, class: "object-scale-down w-[80%] h-[80%]", alt: @product.description %>
      <% else %>
        <%= image_tag 'no-image.svg', class: "object-scale-down w-[80%] h-[80%]", alt: 'No image' %>
      <% end %>
    </div>
    <div class= "flex text-sm pt-2 h-[120px] w-full ml-6">
      <div class="flex flex-col gap-3">
        <div class="flex mt-4 text-l">
          <%= @product.title.truncate(10) %>
        </div>
        <div class="text-white">
          <%= render(StateComponent.new(state: @product.state)) %>
        </div>
        <div data-controller="shopping-cart" data-action="click->shopping-cart#remove" data-shopping-cart-product_id-value="<%= @product.id %>" class="text-[#076CE0] cursor-pointer">
          Remove it
        </div>
      </div>
    </div>
    <div class="text-sm pt-2 w-full ml-6 flex flex-col justify-around">
      <div class="flex mt-4 text-l">
        <div><%= number_to_currency(@product.price) %></div>
      </div>
      <div class="flex gap-4 items-center">
        <%= render QuantityUpdaterComponent.new(product: @product) %>
      </div>
    </div>
  </div>
</div>

<div class="lg:block hidden mx-auto text-black">
  <div class="flex w-full bg-white text-black font-semibold rounded-lg border-[1px] border-gray m-2" >
    <div class="h-[120px] w-[240px] flex items-center justify-center bg-white rounded-lg">
      <% if @product.image.present? %>
        <%= image_tag @product.image, class: "object-scale-down w-[80%] h-[80%]", alt: @product.description %>
      <% else %>
        <%= image_tag 'no-image.svg', class: "object-scale-down w-[80%] h-[80%]", alt: 'No image' %>
      <% end %>
    </div>
    <div class= "flex text-sm pt-2 h-[120px] w-3/4 ml-6">
      <div class="flex flex-col gap-3">
        <div class="flex mt-4">
          <%= @product.title.truncate(16) %>
        </div>
        <div class="text-white">
          <%= render(StateComponent.new(state: @product.state)) %>
        </div>
        <div data-controller="shopping-cart" data-action="click->shopping-cart#remove" data-shopping-cart-product_id-value="<%= @product.id %>" class="text-[#076CE0] cursor-pointer">
          Remove it
        </div>
      </div>
    </div>
    <div class="text-sm pt-2 w-1/4 ml-6 flex flex-col justify-around">
      <div class="flex mt-4 ml-4">
        <div><%= number_to_currency(@product.price) %></div>
      </div>
      <div class="flex gap-4 items-center">
        <%= render QuantityUpdaterComponent.new(product: @product) %>
      </div>
    </div>
  </div>
</div>
