<div id='payment' class="flex flex-col items-center justify-center md:gap-24 bg-white pt-14 pb-14 gap-10">
  <div class="text-xl md:text-4xl text-black">
    Payment methods
  </div>
  <div class="flex md:gap-32 gap-8 text-sm">
    <div class="flex flex-wrap flex-col items-center md:gap-[4rem] gap-[4rem]">
      <%= image_tag 'creditcard.svg', alt: "Credit card", class: "" %>
      <div class="text-normal sm:text-lg">
        Credit
      </div>
    </div>
    <div class="border-r-[1px] h-14 mt-10 border-dark-gray">
    </div>
    <div class="flex flex-col items-center gap-10">
      <%= image_tag 'paypal.svg', alt: "Paypal", class: "" %>
      <div class="text-normal sm:text-lg">
        Paypal
      </div>
    </div>
    <div class="border-l-[1px] h-14 mt-10 border-dark-gray">
    </div>
    <div class="flex flex-col items-center gap-10">
      <%= image_tag 'crypto.svg', alt: "Crypto", class: "" %>
      <div class="text-normal sm:text-lg">
        Crypto
      </div>
    </div>
  </div>
</div>
