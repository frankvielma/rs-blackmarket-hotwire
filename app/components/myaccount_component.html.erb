<div data-controller="signout" id="myAccount">
  <div id="dropdownButton" tabIndex="0" data-action="click->signout#toggleDropdown" class="w-40 text-base custom-focus rounded-md border-1 border-white bg-black text-white hover:bg-hover active:bg-hover active:outline-none active:ring-2 active:ring-offset-2 border border-gray-400 px-5 py-2 cursor-pointer flex justify-between">
    My Account
    <%= image_tag "arrow_down.svg", id: "arrowDown" %>
    <%= image_tag "arrow_up.svg", id: "arrowUp", class: "hidden" %>
  </div>
  <div id="dropdownMenu" class="custom-focus hidden w-40 text-base absolute top-50 rounded-md bg-black text-white py-2 px-4 cursor-pointer hover:bg-gray-100 hover:bg-hover active:bg-hover active:outline-none active:ring-2 active:ring-offset-2">
    <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
  </div>
</div>
